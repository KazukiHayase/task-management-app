<% if page.current? %>
  <li class="page-item active">
    <%= content_tag :a, page, data: { remote: remote }, class: 'page-link', method: @paginate_method %>
  </li>
<% else %>
  <li class="page-item">
    <%= link_to page, url, remote: remote, class: 'page-link', method: @paginate_method %>
  </li>
<% end %>
