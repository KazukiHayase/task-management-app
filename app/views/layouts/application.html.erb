<!DOCTYPE html>
<html>
  <head>
    <title>App</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <%= render "layouts/header" %>

    <% flash.each do |message_type, message| %>
      <div class="flash">
        <%= message %>
      </div>
    <% end %>
    
    <div class="main">
      <%= yield %>
    </div>
  </body>
</html>
