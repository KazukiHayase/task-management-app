<h1>タスクの作成</h1>
<%= form_with model: @task, local: true do |f| %>
    <%= render 'layouts/error_messages', model: f.object %>
    <div>
        <%= f.label :name %>
        <br>
        <%= f.text_field :name %>
    </div>
    <div>
        <%= f.label :content %>
        <br>
        <%= f.text_area :content %>
    </div>
    <%= f.submit "作成" %>
<% end %>